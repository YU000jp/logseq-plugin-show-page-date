{
    "name": "logseq-plugin-show-page-date",
    "description": "Display creation and modification dates on pages.",
    "repository": "https://github.com/YU000jp/logseq-plugin-show-page-date.git",
    "author": "YU000jp",
    "license": "MIT",
    "logseq": {
        "id": "logseq-plugin-show-page-date",
        "title": "Show page date",
        "icon": "./icon.svg",
        "main": "./dist/index.html"
    },
    "effect": true,
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build --mode=dev",
        "prod": "vite build"
    },
    "dependencies": {
        "@logseq/libs": "^0.0.17",
        "date-fns": "^4.1.0",
        "logseq-l10n": "^0.2.0"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/exec": "^7.1.0",
        "@semantic-release/git": "^10.0.1",
        "@types/node": "^24.1.0",
        "conventional-changelog-conventionalcommits": "^9.1.0",
        "cz-conventional-changelog": "^3.3.0",
        "jest": "^30.0.5",
        "npx": "^10.2.2",
        "rollup-plugin-string": "^3.0.0",
        "semantic-release": "^24.2.7",
        "typescript": "^5.8.3",
        "vite": "^4.5.14",
        "vite-plugin-logseq": "^1.1.2"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}